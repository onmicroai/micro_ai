{
   "version": "0.3.0",
   "configurations": [
       {
           "name": "Python: Remote Attach",
           "type": "debugpy",
           "request": "attach",
           "connect": {
               "host": "localhost",
               "port": 5678
           },
           "pathMappings": [
               {
                   "localRoot": "${workspaceFolder}",
                   "remoteRoot": "/code"
               }
           ],
           "justMyCode": true,
       },
       {
         "type": "chrome",
         "request": "launch",
         "name": "Launch Chrome",
         "url": "http://localhost:3000",
         "webRoot": "${workspaceFolder}"
       }
   ]
}